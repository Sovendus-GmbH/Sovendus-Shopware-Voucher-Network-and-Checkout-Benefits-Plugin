<div class="sovendus-admin-settings">
	<sw-page class="sovendus-admin-settings-page">
		<template slot="smart-bar-header">
			<h2>Sovendus Settings</h2>
		</template>

		<template slot="content">
			<sw-card-view>
				<sw-card title="Sovendus App Settings">
					<p>Please use the standalone settings page to configure the Sovendus App:</p>
					<sw-button variant="primary" @click="openStandaloneSettings">
						Open Standalone Settings
					</sw-button>
				</sw-card>
			</sw-card-view>
		</template>
	</sw-page>
</div>
